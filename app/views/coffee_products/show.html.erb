<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-body">
        <h1 class="card-title"><%= @coffee_product.name %></h1>
        <h3 class="card-subtitle mb-3 text-muted"><%= @coffee_product.roaster %></h3>

        <div class="row mt-3">
          <div class="col-md-6">
            <p>
              <strong>Origin:</strong> <%= @coffee_product.origin %>
            </p>
            <p>
              <strong>Roast Level:</strong>
              <span class="badge bg-secondary"><%= @coffee_product.roast_level %></span>
            </p>
          </div>
          <div class="col-md-6">
            <div class="text-center">
              <h2 class="display-4 text-warning">
                <%= number_with_precision(@coffee_product.average_rating, precision: 1) %>
              </h2>
              <p class="text-muted">
                from <%= @coffee_product.professional_reviews.count %> professional reviews
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h3>Professional Reviews</h3>
      </div>
      <div class="card-body">
        <% if @coffee_product.professional_reviews.empty? %>
          <p class="text-muted">No professional reviews available.</p>
        <% else %>
          <% @coffee_product.professional_reviews.each do |review| %>
            <div class="mb-3 pb-3 border-bottom">
              <div class="d-flex justify-content-between">
                <h5>
                  <% review.rating.floor.times do %>★<% end %>
                  <% (5 - review.rating.floor).times do %>☆<% end %>
                  <%= number_with_precision(review.rating, precision: 1) %>
                </h5>
                <small class="text-muted">
                  Reviewed by <%= review.user.username %>
                </small>
              </div>
              <p><%= review.content %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card mb-3">
      <div class="card-header">
        <h4>Similar Products</h4>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% @similar_products.each do |product| %>
            <li class="list-group-item">
              <%= link_to product.name, coffee_product_path(product) %>
              <small class="text-muted d-block">
                <%= number_with_precision(product.average_rating, precision: 1) %>/5
              </small>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>