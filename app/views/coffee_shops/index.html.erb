<%= form_with url: coffee_shops_path, method: :get do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.text_field :search, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.select :country,
          options_for_select(['All Countries'] + CoffeeShop.pluck(:country).uniq),
          {}, class: "form-select" %>
    </div>
    <div class="col-md-2">
      <%= f.submit "Filter", class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>

<div class="row">
  <% @coffee_shops.each do |shop| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= shop.name %></h5>
          <p class="card-text">
            <%= shop.city %>, <%= shop.country %>
            <br>Rating: <%= shop.average_rating %>
          </p>
          <%= link_to "View Details", coffee_shop_path(shop), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-md-3">
    <h4>Browse by Country</h4>
    <ul class="list-group">
      <% CoffeeShop.by_country.each do |country, count| %>
        <li class="list-group-item">
          <%= link_to "#{country} (#{count})", coffee_shops_path(country: country) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-9">
    <%# Main content %>
  </div>
</div>

<%= form_with url: coffee_shops_path, method: :get do |f| %>
  <div class="input-group mb-3">
    <%= f.text_field :search, class: "form-control" %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>

<%= paginate @coffee_shops %>